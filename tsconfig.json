{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
    "strict": true,
		"strictPropertyInitialization": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
